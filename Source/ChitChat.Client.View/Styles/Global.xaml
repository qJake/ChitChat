<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Global style overrides -->

    <Style x:Key="Base" TargetType="FrameworkElement">
        <Setter Property="Margin" Value="5,5,5,0" />
    </Style>

    <Style TargetType="TextBlock" BasedOn="{StaticResource Base}">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="9pt" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="ControlBase" TargetType="Control" BasedOn="{StaticResource Base}">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="9pt" />
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource ControlBase}">
        <Setter Property="Padding" Value="8,2" />
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource ControlBase}">
        <Setter Property="MinHeight" Value="22" />
    </Style>
    
</ResourceDictionary>